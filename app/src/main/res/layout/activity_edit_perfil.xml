<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activity.FragmentPerfil"
    android:background="@color/colorAzul">

    <LinearLayout
        android:id="@+id/linearEdit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_fondo_edit"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <View
            android:id="@+id/vBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/ic_arrow_back"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre(s)"
            android:textColorHint="@color/colorBlack"
            android:textSize="16sp"
            android:layout_marginTop="100dp"
            android:layout_marginStart="20dp"/>

        <EditText
            android:id="@+id/etNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="Nombre"
            android:textColor="@color/colorAzul"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apellido paterno"
            android:textColorHint="@color/colorBlack"
            android:textSize="16sp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"/>

        <LinearLayout
            android:id="@+id/linearApellidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <EditText
                android:id="@+id/etApellido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apellido1"
                android:textColor="@color/colorAzul"
                android:textSize="22sp"
                android:textStyle="bold"/>


        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apellido materno"
            android:textColorHint="@color/colorBlack"
            android:textSize="16sp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"/>

        <EditText
            android:id="@+id/etApellido2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apellido2"
            android:textColor="@color/colorAzul"
            android:textSize="22sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/btn_bg"
            android:text="Guardar"
            android:textColor="@color/colorWhite"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.75" />

        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="20dp"
            android:layout_marginTop="-47dp"
            android:background="@drawable/btn_bg"
            android:text="Cancelar"
            android:textColor="@color/colorWhite"
            app:layout_constraintBottom_toBottomOf="@id/emailPerfil"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/linearEdit"
            app:layout_constraintVertical_bias="0.75" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>